<resources>

    <!-- Base Dark theme for the app -->
    <style name="Theme_App_Dark" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Black background and white text for Dark mode -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorSecondary">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="android:windowBackground">@color/black</item>

        <!-- Customize button styles -->
        <item name="buttonStyle">@style/MyButtonStyle</item>

        <!-- Customize text appearance -->
        <item name="android:textAppearance">@style/MyTextAppearance</item>
    </style>

    <!-- Dark theme button customization -->
    <style name="MyButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Dark theme text appearance -->
    <style name="MyTextAppearance" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
